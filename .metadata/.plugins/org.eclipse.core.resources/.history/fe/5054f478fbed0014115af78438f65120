#include "RPSS_System.h"

RPSS_States RPSS_Handler(RPSS_States state){
	switch(state){
		case GOT_NEW_PATRON:
			state = update_peripheral_controller(state);
			break;
		case IN_DATABASE:
			state = update_peripheral_controller(state);
			break;
		case NOT_IN_DATABASE:
			state = update_peripheral_controller(state);
			break;
		case REGISTER:
			state = update_peripheral_controller(state);
			break;
		case CHECK_BREATHALZYER:
			state = update_peripheral_controller(state);
			break;
		case BREATHALYZER_PASS:
			state = update_peripheral_controller(state);
			break;
		case BREATHALYZER_FAIL:
			state = update_peripheral_controller(state);
			break;
		case DEFAULT:
			display_intro();
			state = update_peripheral_controller(state);
			break;
		case MAINTENANCE:
			break;
		default :
			break;
	}

	return state;
}
